{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "./",
          "files": [
            "Src/Moxd.Maui.Core/Moxd.Maui.Core.csproj",
            "Src/Moxd.Maui.Dispatch/Moxd.Maui.Dispatch.csproj"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "*.yml" ],
        "src": "api",
        "dest": "api"
      },
      {
        "files": [ "*.md", "toc.yml" ],
        "src": "Docs"
      }
    ],
    "resource": [
      {
        "files": [ "Assets/**" ],
        "src": "Docs"
      },
      { "files": [ "Images/Banner.png" ] }
    ],
    "output": "_site",
    "globalMetadata": {
      "_appTitle": "Moxd Documentation",
      "_appFooter": "Â© Moxd Development - All rights reserved",
      "_enableSearch": true,
      "_appLogoPath": "Images/Banner.png"
    },
    "template": [ "default", "modern", "Docs" ]
  }
}