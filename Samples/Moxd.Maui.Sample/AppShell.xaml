<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Moxd.Maui.Sample.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Moxd.Maui.Sample"
       xmlns:views="clr-namespace:Moxd.Maui.Sample.Views"
       Title="Moxd.Maui.Sample"
       FlyoutBehavior="Flyout">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate views:HomePage}"
                  Route="HomePage" />

    <ShellContent Title="Collection Demo"
                  ContentTemplate="{DataTemplate views:CollectionDemoPage}"
                  Route="CollectionDemoPage"
                  FlyoutItemIsVisible="False" />

    <ShellContent Title="Utilities Demo"
                  ContentTemplate="{DataTemplate views:UtilitiesDemoPage}"
                  Route="UtilitiesDemoPage"
                  FlyoutItemIsVisible="False" />
</Shell>